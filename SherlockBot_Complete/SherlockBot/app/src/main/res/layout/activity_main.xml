<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.wason.sherlockbot.MainActivity" tools:layout_editor_absoluteY="50dp">

    <SurfaceView
            android:layout_width="467dp"
            android:layout_height="0dp"
            android:id="@+id/surfaceView" android:layout_marginTop="35dp"
            android:layout_marginBottom="42dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_play" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_play" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="Start"
            android:onClick="onClick"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_on_off" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/surfaceView" android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent" tools:text="Stop"/>
</android.support.constraint.ConstraintLayout>